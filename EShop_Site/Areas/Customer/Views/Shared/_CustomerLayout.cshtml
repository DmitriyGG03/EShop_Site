@using EShop_Site.Components
@{
    Layout = "_GlobalLayout";
    ViewData["Title"] = "Customer";
}
<!DOCTYPE html>
<html lang="en">

@section Header {
    <div class="header-flex-column-line" style="grid-area: 1 / 2 / 2 / 3;">
        <div class="nav-links-container">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
            <a class="nav-link" asp-area="Customer" asp-controller="Products" asp-action="ProductsList">Cathalog</a>
        </div>
        <div class="header-divider"></div>
    </div>
        <div class="header-grid-line" style="grid-area: 2 / 2 / 3 / 3;">
            <input id="searchInput" class="header-input-field" placeholder="I want to find..."/>
            <button class="header-find-button" onclick="redirectToSearch()">
                <img style="width: 100%; height: 100%;" alt="find" src="StaticFiles/search_icon.png">
            </button>
            <button class="header-image-button" style="background-image: url('StaticFiles/cart_icon.png');" onclick="location.href='@Url.Action("CartView", "Order", new { area = "Customer" })'"></button>
        </div>
    <div class="container-center" style="grid-area: 1 / 3 / 3 / 4;">
        @if (!User.Identity.IsAuthenticated)
        {
            <a class="button-type-2" asp-area="" asp-controller="Authentication" asp-action="Register">Sign up</a>
            <div style="width: 1em;"></div>
            <a class="button-type-1" asp-area="" asp-controller="Authentication" asp-action="Login">Log in</a>
        }
        else
        {
            <button class="navbar-log-panel-buttons" style="background-image: url('StaticFiles/orders_icon.png');" onclick="location.href='@Url.Action("OrdersView", "Order", new { area = "Customer" })'"></button>
            <button class="navbar-log-panel-buttons" style="background-image: url('StaticFiles/profile_icon.png');" onclick="location.href='@Url.Action("Profile", "Home", new { area = "" })'"></button>
        }
    </div>
}

<head>
    <title>@ViewData["Title"] - TradeWave</title>
    <link rel="stylesheet" href="~/css/manager/manager.css" asp-append-version="true"/>
</head>

@RenderBody()

<script defer src="~/js/CustomerSearchBox.js"></script>
</html>