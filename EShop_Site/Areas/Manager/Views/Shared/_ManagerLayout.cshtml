@{
    Layout = "_GlobalLayout";
    ViewData["Title"] = "Management";
}
<!DOCTYPE html>
<html lang="en">

@section Header {
    <div class="header-flex-column-line" style="grid-area: 1 / 2 / 3 / 3;">
        <div class="nav-links-container">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">Sellers</a>
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">Products</a>
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">Orders</a>
        </div>
    </div>
    <div class="container-center" style="grid-area: 1 / 3 / 3 / 4;">
        @if (!User.Identity.IsAuthenticated)
        {
            <a class="button-type-2" asp-area="" asp-controller="Authentication" asp-action="Register">Sign up</a>
            <div style="width: 1em;"></div>
            <a class="button-type-1" asp-area="" asp-controller="Authentication" asp-action="Login">Log in</a>
        }
        else
        {
            <button class="navbar-log-panel-buttons" style="background-image: url('StaticFiles/profile_icon.png');" onclick="location.href='@Url.Action("Profile", "Home", new { area = "" })'"></button>
        }
    </div>
}

<head>
    <title>@ViewData["Title"] - TradeWave</title>
    <link rel="stylesheet" href="~/css/manager/manager.css" asp-append-version="true"/>
</head>

@RenderBody()


</html>