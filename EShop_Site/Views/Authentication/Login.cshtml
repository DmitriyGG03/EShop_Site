@model SharedLibrary.Requests.LoginRequest

@{
    ViewData["Title"] = "Login";
}

<html lang="en">
<head>
    <title>@ViewData["Title"] - TradeWave</title>
    <link rel="stylesheet" href="~/css/global/modal.css" asp-append-version="true"/>
</head>
<body>

    <div class="login-container">
        <div class="login-box">
            <h3 class="heading-title">Authenticate</h3>
            <form asp-action="Login" asp-controller="Authentication" method="post">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email"/>
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password"/>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <button type="submit" style="background-color: var(--window-blue);" class="button-type-1">Log in</button>
                </div>
            </form>
        </div>
    </div>

</body>

<div id="errorModal" class="modal-section">
    <div class="modal-content">
        <span class="modal-close-cross">&times;</span>
        <h2 class="heading-title">Error</h2>
        <div id="errorMessages" class="modal-text">
            @if (ViewData.ModelState[string.Empty]?.Errors.Count > 0)
            {
                @foreach (var error in ViewData.ModelState[string.Empty].Errors)
                {
                    <p>@error.ErrorMessage</p>
                }
            }
        </div>
        <button class="button-type-1 modal-close-btn">Ok</button>
    </div>
</div>


<script defer src="~/js/modal.js"></script>

</html>