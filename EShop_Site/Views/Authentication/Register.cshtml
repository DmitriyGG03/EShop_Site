@{
    ViewData["Title"] = "Register";
}

@section AdditionalMenuButtons {

}

<head>
    <title>@ViewData["Title"] - TradeWave</title>
    <style>
            * {
                color: #f5f7fa;            
            }
        </style>
</head>

<body>
<main class="container-size container-main">
    <div class="login-container">
        <div class="login-box">
            <h3 class="white-heading">Register</h3>
            <form method="post">
                <div class="input-group">
                    <label for="username">Name</label>
                    <input type="email" id="" name="username" required/>
                </div>
                <div class="input-group">
                    <label for="username">Surname</label>
                    <input type="email" id="" name="username" required/>
                </div>
                <div class="input-group">
                    <label for="username">Patronymic</label>
                    <input type="email" id="" name="username" required/>
                </div>
                
                <div class="input-group">
                    <label for="username">Phone number</label>
                    <input type="number" id="" name="username" required/>
                </div>
                <div class="input-group">
                    <label for="email">Email</label>
                    <input type="email" id="" name="email" required/>
                </div>
                
                <div class="input-group">
                    <label for="password">Password</label>
                    <input type="password" id="" name="password" required/>
                </div>
                <div class="input-group">
                    <label for="password">Repeate password</label>
                    <input type="password" id="" name="password" required/>
                </div>
                <a type="submit" class="button-type-2">Log in</a>
            </form>
        </div>
    </div>
</main>
</body>