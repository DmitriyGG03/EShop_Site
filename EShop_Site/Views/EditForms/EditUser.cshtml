@using SharedLibrary.Requests
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model EShop_Site.Models.UserForm

@{
    string title;
    @if (!Model.SellerId.Equals(Guid.Empty))
    {
        @(title = "Edit user")
    }
    else
    {
        @(title = "Create user")
    }
}

<html lang="en">
<head>
    <title>title - TradeWave</title>
</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <h3 class="heading-title">@title</h3>
            <form asp-action="EditUser" asp-controller="EditForms" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name"/>
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName"/>
                    <span asp-validation-for="LastName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Patronymic"></label>
                    <input asp-for="Patronymic"/>
                    <span asp-validation-for="Patronymic"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email"/>
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber"/>
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password"/>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordConfirm"></label>
                    <input asp-for="PasswordConfirm" type="password"/>
                    <span asp-validation-for="PasswordConfirm"></span>
                </div>
                <input type="hidden" asp-for="UserId"/>
                <input type="hidden" asp-for="SellerId" />
                <input type="hidden" asp-for="RoleId" />
                <div class="form-group" style="flex-direction: row; align-items: center; justify-content: space-around;">
                    <button type="submit" style="background-color: var(--window-blue);" class="button-type-1">Confirm</button>
                    <button type="reset" style="background-color: var(--window-blue);" class="button-type-1" onclick="location.href='@Url.Action("Profile", "Home", new { area = "" })'">Dismiss</button>
                </div>
            </form>
        </div>
    </div>

</body>

@await Html.PartialAsync("_ErrorModal")